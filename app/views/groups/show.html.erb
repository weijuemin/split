<div class="modalWrap1"></div>
<div class="row">
  <div class="modal1 col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-10 col-sm-offset-1">
    <form action="" class="addMemF" method="post">
    <input type="hidden" name="_method" value="patch">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <div class="form-group">
        <label for="invite">$plitters you want to add into this group:</label>
        <input type="text" class="form-control" id="invite" placeholder="Enter name or email">
      </div>
      <div class="inviteWrap"></div>
      <div class="inviteResult"></div>
      <input type="submit" class="btn btn-info btn-sm" value="Save">
    </form>
  </div>
</div>

<div id="main">
	<div id="containerGrp">
		<h2><%= @group.name %></h2>
		<h4>Created by: <%= @members.first.user.first_name %> <%= @members.first.user.last_name %></h4>
		
		<h4>Members:</h4>
		<% if @members.count == 1 and @members.first.user == @current_user %>
			<p>You're the only member in the group!</p>
		<% else %>
		<ul class="showMember">
			<% @members.each do |m| %>
			<li><%= m.first.user.first_name %> <%= m.first.user.last_name %></li>
			<% end -%>
		</ul>
		<% end -%>
		<button class="btn btn-success btn-sm newmember" data-groupId="<%= @group.id %>">Invite</button>

		<h3>List of Expenses</h3>
		<% if @group.expenses %>
			<ul>
				<% @group.expenses.each do |expense| %>
					<li><a href="/expenses/<%= expense.id %>"><%= expense.name %></a></li>
				<% end %>
			</ul>
		<% end %>
		<a href="/expenses/<%= @group.id %>/new">New Expense</a>
	</div>
</div>
  
