<div class="mainbg">
	<%= image_tag "mainbg.jpg", class: "bg" %>
</div>

<div class="logo">
  <%= image_tag "logo.png" %>
</div>
<div class="container-fluid content">
	<div id="row">
		<div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
			<div id="header">
				<a href="/sessions/new">Not registered?</a>
			</div>
			<h3>Splitter Login</h3>
			<form action="/sessions/login" method="POST" class="lr">
				<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token %>">		
				
				<div class="form-group">
					<label for="email" value="Email Address">Email Address:</label>
					<input class="form-control" name="email" placeholder="Email address" type="text">
				</div>
				
				<div class="form-group">
					<label for="password" value="Password">Password:</label>
					<input class="form-control" name="password" placeholder="Password" type="password">
				</div>
				
				<button type="submit" class="btn btn-primary" value="login">Login</button>
			</form>
		</div>
		<div id="messages">
			<% if flash[:message] %>
				<% flash[:message].each do |message| %>
					<%=message %><br>
				<% end %>
			<% end %>
		</div>
	</div>
</div>